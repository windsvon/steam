@import "mixin/reset.styl"


$standard-blue = #76dbff;
$deep-black = #13181e;
$block-background = rgba($deep-black, 0.4);
$background = #343434;
$standard-orange = #e9a43d;
$text-color = #dddddd;
$icon-color = #dddddd;
$header-background = rgba(#ffffff, 5%)
$content-background = #2a3238

$font-size-mobile = 16px;
$font-size-web = 14px;
$icon-size = 16px;

$breakpoint-1 = 640px;
$breakpoint-2 = 1100px


@import "assets/common.styl";

initBlockList(1, 2, 3, 3)

@media (min-width: 1100px) {
    {'.theme-' + theme} {
        font-family: Helvetica, Tahoma, Arial, "Noto Sans", "Noto Sans CJK SC", "Source Han Sans CN", "Microsoft YaHei", "微软雅黑", "Hiragino Sans GB", SimSun, "宋体", sans-serif;
        background: url('../../img/background.jpg') no-repeat center;
        display: none;
        .page-introduction {
            display: block;
        }
        .license-info {
            display: block;
        }

        .container {
            background: url('../../img/content-background.jpg') no-repeat right;
            background-size: cover;
            overflow: hidden;
            position: relative;
        }

        .content-container {
            //background: $content-background;
        }
        .left-content-container {
            background: $deep-black;
            float: left;
            width: 196px;
            height: 100%;
            margin-bottom: -10000px;
            padding-bottom:10000px; /*距离白色底块下方的内边距为25px*/
        }
        .right-content-container {
            overflow: hidden;
            padding: 20px 0 20px 20px;
        }
        .title {
            margin: 0 0 0 4px;
            font-size: $font-size-mobile + 4px;
            line-height: 2;
            .show-more {
                background: url("../../img/icon-eye.jpg") no-repeat left;
                color: #fff;
                float: right;
                font-size: $font-size-mobile;
                padding-left: 25px;
            }
            .title-icon {
                display: inline-block;
                margin-right: 12px;
                vertical-align: middle;
            }
            .title-text {
                display: inline-block;
                color: $text-color;
                vertical-align: top;
            }
            i {
                color: $standard-blue;
                margin-right: 8px;
            }
        }
        .content-block {
            margin-bottom: 16px;
        }
        .page-introduction {
            font-size: $font-size-web;
            color: $standard-orange;
            line-height: 26px;
            margin: 4px 0 8px 4px;
        }

        .game-highlight {
            overflow: hidden;
            .title {
                display: none;
            }
            .block-list-large {
                margin: 0;
            }

        }
        .game-highlight-item {
            display: block;
            background: $deep-black;
            overflow: hidden;
            box-sizing: border-box;
            padding: 10px 16px;
            border-radius: 4px;
            width: 100%;
            .game-icon {
                width: 24px;
                display: inline-block;
                vertical-align: middle;
                margin-right: 8px;
            }
            .game-name {
                display: inline-block;
                color: $text-color;
                width: 125px;
                font-size: $font-size-web;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                vertical-align: middle;
            }
        }
        .banner {
            overflow: hidden;
            box-sizing: border-box;
            padding: 16px;
            .banner-item {
                position: relative;
                height: 80px;
                width: 164px;
                margin-bottom: 8px;
                overflow: hidden;
                .ad-image {
                    width: 100%;
                }
                .ad-description {
                    width: 100%;
                    height: 20px;
                    line-height: 20px;
                    background: rgba(0,0,0,0.75);
                    color: $text-color;
                    position: absolute;
                    bottom: 0;
                    font-size: 12px;
                    text-align: center;
                }
            }
        }
        .hot-wanted {
            overflow: hidden;
            .block-list-large {
                box-sizing: border-box;
                float: left;
                width: 33.33%;
                padding: 4px;
            }
        }

        .wanted-item {
            display: table;
            position: relative;
            background: #22272d;
            border-radius: 4px;
            box-sizing: border-box;
            padding: 6px 8px;

            .award-amount {
                width: 80px;
                height: 44px;
                line-height: 44px;
                background: url("../../img/mobile/icon-money.png") no-repeat center;
                float: left;
                margin: 0 8px 0 0;
                span {
                    width: 32px;
                    display: inline-block;
                    margin-left: 40px;
                    text-align: center;
                    font-weight: bold;
                    color: $standard-orange;
                }
            }
            .wanted-item-content {
                display: table-cell;
                vertical-align: middle;
                width: 100%;
                text-align: left;
                color: $text-color;
                font-size: $font-size-web;
                line-height: 1.4
            }
        }
        .hot-topics {

        }
        .hot-topic-list {
            overflow: hidden;

        }
        .topic {
            display: block;
            word-wrap: break-word;
            word-break: break-all;
            color: $text-color;
            font-size: $font-size-web;
            text-indent: -5px;
            line-height: 1.8;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            box-sizing: border-box;
            width: 50%;
            float: left;
            padding-right: 16px;
            &:nth-child(even) {
                border-left: 1px solid black;
                padding-left: 16px;
            }
            &:hover {
                color: $standard-blue;
                text-decoration: underline;
            }
            //&:visited {
            //    color: #6c4b3a;
            //}
        }
        .recommended {
            overflow: hidden;
            .block-list-large {
                box-sizing: border-box;
                float: left;
                width: 25%;
                padding: 4px;
            }
        }

        .recommended-item {
            display: block;
            position: relative;
            width: 100%;
            .recommended-cover {
                width: 100%;
            }
            .recommended-description {
                background: rgba(0,0,0,0.75);
                width: 100%;
                position: absolute;
                bottom: 0;
                text-align: center;
                line-height: 2;
                box-sizing: border-box;
                padding: 0 16px;
                .category, .name {
                    font-size: $font-size-web - 2px;
                }
                .category {
                    color: $standard-blue;
                    margin-right: 4px;
                }
                .name {
                    color: $text-color;
                }
            }
        }
        .license-info {
            color: #888888;
            font-size: 12px;
            text-align: center;
            margin-top: 24px
        }
    }
}

