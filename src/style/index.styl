/* Header
 * --------------------------------------- */

#nav-top {
	position: fixed
	top: -45px
	background-color: rgba(28,28,28,0.7)
	width: 100%
	height: 44px
	z-index: 1
	border-bottom: 1px solid #3684c3
	transition: transform 1s
	
	#container-nav-top {
		width: 960px
		margin: auto
		height: 44px
		line-height: 44px
		img {
			height: 30px
			vertical-align: middle
		}
		ul {
			display: inline-block
			margin-left:100px
			li {
				display: inline-block
				margin-right: 50px
				font-size: 15px
				a {
					text-decoration: none
					color: #666
					&.active, &:hover {
						color: lighten(#666, 30)
					}		
				}	
			}
		}
		#menu {
			display: none
		}
	}
}

#nav-bar {
	position: fixed
	top: 0
	z-index: 1
	width: 100%
	background-color: rgba(28,28,28,0.9)
	height: 44px
	transition: transform 1s
	#container-nav-bar {
		width: 960px
		margin-left: 20%
		line-height: 44px
		img {
			height: 25px
			vertical-align: middle
			margin-left: 10px
			transition: opacity 1s
		}
		ul {
			display: inline-block
			margin-left: 300px
			font-size: 0
			vertical-align: middle
			li {
				display: inline-block
				vertical-align: middle
				padding: 0 30px 0 30px
				border-right: 1px solid #666
				height: 30px
				font-size: 15px
				line-height: 30px				
				a {
					color: #666
					&:hover {
						color: lighten(#666, 30)
					}
				}
			}
		
		}
		#attend {
			display: inline-block
			border: 1px solid #007cd1
			border-radius: 5px
			height: 30px
			width: 150px
			line-height: 30px
			text-align: center
			background-color: #007cd1
			margin-left: 20px
			a {
				color: white
				font-size: 15px
			}
		}
	}
}


// 设置导航栏的动画效果
.fp-viewing-page {	
	&1 {
		#nav-top {
			transform: translateY(45px)			
		}
		#nav-bar {
			transform: translateY(45px)
			#container-nav-bar {
				img {
					opacity: 0
				}
				ul {
					#overview {
						a {
							color: lighten(#666, 30)
						}
					}
				}
			}
		}		
	}

	&2, &3, &4, &5, &6 {
		#nav-bar {
			#container-nav-bar {
				ul {
					#function {
						a {
							color: lighten(#666, 30)
						}
					}
				}
			}
		}		
	}

	&7, &8, &9, &10 {
		#nav-bar {
			#container-nav-bar {
				ul {
					#design {
						a {
							color: lighten(#666, 30)
						}
					}
				}
			}
		}		
	}

	&11, &12, &13 {
		#nav-bar {
			#container-nav-bar {
				ul {
					#power {
						a {
							color: lighten(#666, 30)
						}
					}
				}
			}
		}		
	}			
		
}

/* Header的响应式设计
 * --------------------------------------- */

@media screen and (max-width: 960px) {
	#nav-bar {
		display: none
	}
	#nav-top {
		top: 0
		#container-nav-top {
			width: 100%
			img {
				margin-left: 30px
			}
			ul {
				width: 100%
				height: 0px
				background-color: #2d3237
				margin-left:0
				display: block
				transform: translateY(0px)
				overflow: hidden
				li {
					width: 100%
					display: block
					padding-left: 30px
					font-size: 15px
					border-bottom: 1px solid black
					a {
						text-decoration: none
						color: #666
						&.active, &:hover {
							color: lighten(#666, 30)
						}		
					}	
				}
				&.active {
					height: 1000px
				}
			}
			#menu {
				display: block
				width: 30px
				height: 25px
				position: absolute
				right: 15px
				top: 10px
			}		
		}		
	}
	.fp-viewing-page {	
		&1 {
			#nav-top {
				transform: translateY(0px)			
			}
		}
	}
}

	
