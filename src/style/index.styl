/* Page4
* --------------------------------------- */
.page4 {
	background: url("../img/winkpax/bg-situation@2x.jpg") no-repeat center
	background-size: cover
	.background {
		height:auto
		width:100%
		position: absolute
		top: 0
		bottom: 0
		img {
			position: absolute
			left: 0
			top: 0
			height: 100%
			width: 100%
			opacity: 0
			&.active {
				opacity: 1
				transition: all 2s
			}			
		}
	}
	.container {
		width: 960px
		height: auto
		position: absolute
		top: 44px
		bottom: 0
		left: 0
		right: 0
		margin: auto
		.content {
			border-right: 1px dashed lighten(#666,20)
			width: 20%
			height: auto
			position: absolute
			top: 0
			bottom: 0
			left: 0
			.description {
				position: absolute
				width: 100%
				left: 120%
				top: 100px
				div {
					position: absolute
					color: lighten(#666,30)
					opacity: 0
					&.active {
						opacity: 1
						transition: all 2s 1s
					}
				}

			}
			#timeline {
				height: 60%
				position: absolute
				right:0
				left:auto
				top:0
				bottom:0
				margin-top: auto
				margin-bottom: auto
				div {
					height: 25%
					width: 120px
					font-size: 25px
					position:relative
					span {
						display:block
						height:25px
						position:absolute
						left:0
						right:0
						top:0
						bottom:0
						margin-top:auto
						margin-bottom:10px
						color: lighten(#666,30)				
					}
					div {
						width:10px
						height:0px
						border-bottom: 1px solid white
						position: absolute
						top:auto
						bottom:0
						left: auto
						right:0
					}
					&.active {
						div {
							width: 120px
							border-bottom: 5px solid lighten(#666,30)
						}
					}	

				}
	
			}		

		}
	}
}

/* 响应式
* --------------------------------------- */
@media screen and (max-width: 960px) {
	.page4 {
		.container {
			width: 100%
